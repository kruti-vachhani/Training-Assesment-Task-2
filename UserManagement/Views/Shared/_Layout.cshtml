<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserManagement</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">


</head>

<body>
    <header>
        <nav class="navbar d-flex justify-content-between align-items-center bg-white border-bottom p-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Blog Plateform</a>

            <button class="btn me-3" style="background-color: #142ed8; color: white;" data-bs-toggle="modal"
                data-bs-target="#logout">
                Logout
            </button>
        </nav>

    </header>

    @* modal for logout conformation *@
    <div class="modal fade" id="logout" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">

        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content py-2">
                <div class="modal-body d-flex flex-column justify-content-center align-items-center gap-2">
                    <i class="fa-solid fa-triangle-exclamation" style="color: rgb(255, 187, 0); font-size: 40px;"></i>
                    <h1 class="fs-5 fw-bold">Are you sure you want to logout ?
                    </h1>
                </div>

                <div class="modal-footer border-0 justify-content-center">
                    <a class="btn px-4 fw-bold" asp-controller="Home" asp-action="Logout"
                        style="background-color: #142ed8; color: white;">YES</a>

                    <button type="button" class="btn px-4 fw-bold" data-bs-dismiss="modal"
                        style="background-color: #ffffff;border-color: #142ed8; color: #142ed8;">NO</button>
                </div>
            </div>
        </div>
    </div>

    <div class="px-md-5 p-4 w-100 h-100 main_container" style="background-color: #f2f2f2;">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
